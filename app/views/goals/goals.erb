<h2>Hello <%= "#{@user.username}" %></h2>

    <% @goals.each_with_index do |goal, index| %>
    <p><%= "#{index+1}.  #{goal.content}" %></p>
    <p>By when: <%= "#{goal.by_when}"%></p>
    <p>Created at: <%= "#{goal.created_at}"%></p>
    
    
    <p><a href=<%="/goals/#{goal.id}/edit"%>>Edit this goal</a></p>
    <% end %>
        

    <br>

    <p><a href="/goals/new">Make a new goal</a></p>
    <br>

    <p><a href="/logout">Log Out</a></p>
